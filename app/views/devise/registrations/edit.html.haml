.row
  .col.l6.offset-l3.s12
    %h2= t('.title', resource: resource_class.model_name.human)
    .z-depth-1.y-depth-3.x-depth-3.green-text.lighten-4.row{style: ' padding: 20px 30px 20px 30px; border: 1px; solid #EEE;'}

      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .field
          = f.label :email, t('activerecord.attributes.user.email')
          %br/
          = f.email_field :email
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            = t('devise.registrations.edit.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email)
        .field
          = f.label :password, t('activerecord.attributes.user.password')
          %i
            (#{t('devise.registrations.edit.leave_blank_if_you_don_t_want_to_change_it')})
          %br/
          = f.password_field :password, autocomplete: 'off'
        .field
          = f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation')
          = f.password_field :password_confirmation
        .field
          = f.label :current_password, (t('activerecord.attributes.user.current_password'))
          %i
            (#{t('devise.registrations.edit.we_need_your_current_password_to_confirm_your_changes')})
          %br/
          = f.password_field :current_password
        %div= f.submit t('.update'), class: 'waves-effect waves-light btn'
      %h3= t('devise.registrations.edit.cancel_my_account')
      %p
        = t('devise.registrations.edit.unhappy')
        ? #{link_to t('devise.registrations.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.are_you_sure') }, method: :delete}.
      = link_to t('devise.shared.links.back'), :back
