.row
  .col.l6.offset-l3.s12
    %h4= t('devise.sessions.new.sign_in')
    .card
      .card-content
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .row
            .input-field.col.s12
              = f.label :email, t('activerecord.attributes.user.email')
              = f.email_field :email, autofocus: true
          .row
            .input-field.col.s12
              = f.label :password, t('activerecord.attributes.user.password')
              = f.password_field :password, autocomplete: 'off'

          .row
            .col.s6
              = f.submit t('devise.sessions.new.sign_in'), class: 'waves-effect waves-light btn'
            - if devise_mapping.rememberable?
              .col.s6
                = f.check_box :remember_me
                = f.label :remember_me, t('activerecord.attributes.user.remember_me')
          .row
            .col.s12
              = render 'devise/shared/links'
